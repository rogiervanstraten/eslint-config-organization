{
	"name": "@rogiervanstraten/eslint-config-organization",
	"version": "0.0.1",
	"description": "Custom ESLint config for your organization",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/rogiervanstraten/eslint-config-organization"
	},
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig-build.json",
		"watch": "tsc -w -p tsconfig-build.json",
		"test": "jest",
		"test:coverage": "npm test -- --coverage",
		"test:badges": "npm run test:coverage  && jest-coverage-badges",
		"format": "npm run build && prettier --write . && eslint --fix . --ext ts,tsx",
		"prepare": "husky"
	},
	"author": "Rogier van Straten <rogier@from89.com>",
	"contributors": [],
	"license": "ISC",
	"peerDependencies": {
		"eslint": "^7.32.0 || ^8.2.0",
		"eslint-plugin-import": "^2.29.1"
	},
	"engines": {
		"node": "^10.12.0 || >=12.0.0"
	},
	"dependencies": {
		"eslint-config-airbnb-base": "^15.0.0"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.10",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.12",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"eslint-plugin-prettier": "^5.2.1",
		"jest": "^29.7.0",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4",
		"husky": "^9.1.2",
		"lint-staged": "^15.2.7"
	},
	"lint-staged": {
		"!(*.ts)": "prettier --write --ignore-unknown",
		"*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"keywords": [
		"eslint",
		"config"
	]
}
